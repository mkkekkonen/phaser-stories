{
  "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "commonjs",
      "target": "es6",
      "lib": ["es6", "DOM", "ScriptHost"],
      "declaration": true,
      "jsx": "react",
      "esModuleInterop": true,
      "typeRoots": [
        "node_modules/@types",
        "node_modules/phaser/types"
      ],
      "types": ["reflect-metadata", "node"],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
  },
  "include": [
      "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
